<div class="card no-print" *ngIf="viewMode === 'list'">
    <div class="card-header">
        <div class="card-title">
            <i class="fas fa-clipboard-list" style="margin-right: 10px; color: var(--primary);"></i>
            Job Sheets / Repair Tickets
        </div>
        <button class="btn btn-primary btn-lg-icon" (click)="openAddModal()">
            <i class="fas fa-plus"></i> New Job
        </button>
    </div>

    <!-- Filters -->
    <div class="filter-controls">
        <div class="form-group" style="flex: 1;">
            <select class="form-control" [(ngModel)]="filterStatus" (change)="applyFilters()">
                <option value="">All Statuses</option>
                <option value="Pending">Pending</option>
                <option value="Diagnosing">Diagnosing</option>
                <option value="Waiting for Approval">Waiting for Approval</option>
                <option value="Ready">Ready</option>
                <option value="Delivered">Delivered</option>
                <option value="Cancelled">Cancelled</option>
            </select>
        </div>
        <div class="form-group" style="flex: 2;">
            <input type="text" class="form-control" [(ngModel)]="filterSearch" (input)="applyFilters()"
                placeholder="Search by Customer, Mobile, or Ticket ID...">
        </div>
        <button class="btn btn-secondary" (click)="resetFilters()">
            <i class="fas fa-undo"></i> Reset
        </button>
    </div>

    <!-- Data Table -->
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Device</th>
                    <th class="text-center">Status</th>
                    <th>Est. Cost</th>
                    <th class="text-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let job of filteredJobs">
                    <td><span class="badge badge-primary">{{ job.id }}</span></td>
                    <td>{{ job.date }}</td>
                    <td>
                        <div style="font-weight: 600;">{{ job.customerName }}</div>
                        <div class="text-muted small">{{ job.customerMobile }}</div>
                    </td>
                    <td>{{ job.deviceBrand }} {{ job.deviceModel }}</td>
                    <td>
                        <select class="status-select" [(ngModel)]="job.status" (change)="updateJobStatus(job)"
                            [ngClass]="{
                            'status-pending': job.status === 'Pending',
                            'status-diagnosing': job.status === 'Diagnosing',
                            'status-approval': job.status === 'Waiting for Approval',
                            'status-ready': job.status === 'Ready' || job.status === 'Delivered',
                            'status-cancelled': job.status === 'Cancelled'
                        }">
                            <option value="Pending">Pending</option>
                            <option value="Diagnosing">Diagnosing</option>
                            <option value="Waiting for Approval">Waiting for Approval</option>
                            <option value="Ready">Ready</option>
                            <option value="Delivered">Delivered</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                    </td>
                    <td style="font-weight: 600;">₹{{ job.estimatedCost }}</td>
                    <td class="text-right">
                        <button class="btn-sm btn-primary" (click)="openEditModal(job)" title="Edit"><i
                                class="fas fa-edit"></i></button>
                        <button class="btn-sm btn-success ml-1" (click)="sendWhatsApp(job)" title="WhatsApp"><i
                                class="fab fa-whatsapp"></i></button>
                        <button class="btn-sm btn-secondary ml-1" (click)="printJob(job)" title="Print"><i
                                class="fas fa-print"></i></button>
                        <button class="btn-sm btn-danger ml-1" (click)="deleteJob(job.id)" title="Delete"><i
                                class="fas fa-trash"></i></button>
                    </td>
                </tr>
                <tr *ngIf="filteredJobs.length === 0">
                    <td colspan="7" class="text-center" style="padding: 30px;">
                        <i class="fas fa-inbox fa-3x text-muted" style="margin-bottom: 15px; display: block;"></i>
                        No Job Sheets Found
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal" [class.show]="isModalOpen">
    <div class="modal-content modal-lg"> <!-- Modern Large Modal -->
        <div class="modal-header">
            <h3>{{ editingJob.id ? 'Edit Ticket' : 'Create New Ticket' }}</h3>
            <button class="modal-close" (click)="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <form>
                <div class="form-container">
                    <!-- Left Column -->
                    <div class="form-column">
                        <!-- Status Section -->
                        <div class="form-section">
                            <div class="section-header">
                                <i class="fas fa-info-circle"></i> Job Information
                            </div>
                            <div class="form-row">
                                <div class="form-group" style="flex: 0 0 150px;" *ngIf="editingJob.id">
                                    <label>Ticket #</label>
                                    <input type="text" class="form-control" [value]="editingJob.id" disabled
                                        style="background: #e9ecef; font-weight: bold;">
                                </div>
                                <div class="form-group">
                                    <label>Current Status</label>
                                    <select class="form-control" [(ngModel)]="editingJob.status" name="status">
                                        <option value="Pending">Pending</option>
                                        <option value="Diagnosing">Diagnosing</option>
                                        <option value="Waiting for Approval">Waiting for Approval</option>
                                        <option value="Ready">Ready for Pickup</option>
                                        <option value="Delivered">Delivered</option>
                                        <option value="Cancelled">Cancelled</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Date Received</label>
                                    <input type="datetime-local" class="form-control" [(ngModel)]="editingJob.date"
                                        name="date">
                                </div>
                            </div>
                        </div>

                        <!-- Customer Details -->
                        <div class="form-section">
                            <div class="section-header">
                                <i class="fas fa-user"></i> Customer Details
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Full Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" [(ngModel)]="editingJob.customerName"
                                        name="cName" required placeholder="Enter customer name">
                                </div>
                                <div class="form-group">
                                    <label>Mobile Number <span class="text-danger">*</span></label>
                                    <input type="tel" class="form-control" [(ngModel)]="editingJob.customerMobile"
                                        name="cMobile" required placeholder="10-digit mobile">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Alt. Mobile</label>
                                    <input type="tel" class="form-control" [(ngModel)]="editingJob.customerAltMobile"
                                        name="cAlt">
                                </div>
                                <div class="form-group" style="flex:2;">
                                    <label>Address</label>
                                    <input type="text" class="form-control" [(ngModel)]="editingJob.customerAddress"
                                        name="cAddress" placeholder="Optional">
                                </div>
                            </div>
                        </div>

                        <!-- Device Info & Pattern -->
                        <div class="form-section">
                            <div class="section-header">
                                <i class="fas fa-mobile-alt"></i> Device & Security
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Brand</label>
                                    <div style="display:flex; gap:5px;">
                                        <select class="form-control" [(ngModel)]="editingJob.deviceBrand" name="dBrand"
                                            (change)="onBrandChange()" required>
                                            <option value="">Select Brand</option>
                                            <option *ngFor="let b of brands" [value]="b">{{ b }}</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <input *ngIf="editingJob.deviceBrand === 'Other'" type="text"
                                            class="form-control" placeholder="Type Brand"
                                            [(ngModel)]="editingJob.deviceBrand" name="dBrandOther">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Model</label>
                                    <input type="text" class="form-control" [(ngModel)]="editingJob.deviceModel"
                                        name="dModel" list="modelList" placeholder="Select or Type Model">
                                    <datalist id="modelList">
                                        <option *ngFor="let m of availableModels" [value]="m"></option>
                                    </datalist>
                                </div>
                                <div class="form-group">
                                    <label>IMEI / Serial</label>
                                    <input type="text" class="form-control" [(ngModel)]="editingJob.imei" name="dImei">
                                </div>
                                <div class="form-group">
                                    <label>Color</label>
                                    <input type="text" class="form-control" [(ngModel)]="editingJob.color"
                                        name="dColor">
                                </div>
                            </div>

                            <div
                                style="background: #f8f9fa; padding: 15px; border-radius: 10px; margin-top: 15px; display: flex; gap: 20px;">
                                <div style="flex: 1;">
                                    <div class="form-group">
                                        <label>Screen Lock Type</label>
                                        <select class="form-control" [(ngModel)]="editingJob.lockType" name="lockType">
                                            <option value="None">No Lock</option>
                                            <option value="PIN/Password">PIN / Password</option>
                                            <option value="Pattern">Pattern</option>
                                        </select>
                                    </div>
                                    <div class="form-group" *ngIf="editingJob.lockType === 'PIN/Password'"
                                        style="margin-top: 15px;">
                                        <label>Enter PIN/Code</label>
                                        <input type="text" class="form-control" [(ngModel)]="editingJob.lockCode"
                                            name="lockCodeText" placeholder="e.g. 123456"
                                            style="font-size: 1.2rem; letter-spacing: 2px;">
                                    </div>
                                </div>

                                <div style="flex: 0 0 auto;" *ngIf="editingJob.lockType === 'Pattern'">
                                    <div class="pattern-container">
                                        <div class="pattern-grid">
                                            <div *ngFor="let p of patternPoints" class="pattern-dot"
                                                [class.active]="isPointActive(p)" (click)="togglePatternPoint(p)"></div>
                                        </div>
                                        <div style="color: rgba(255,255,255,0.7); font-size: 0.8rem; margin-top: 10px;">
                                            {{ activePattern.length ? activePattern.join(' → ') : 'Draw Pattern' }}
                                        </div>
                                        <button class="btn-sm btn-light" (click)="resetPattern()"
                                            style="margin-top: 10px; padding: 2px 10px; font-size: 0.75rem;">Clear</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="form-column">
                        <!-- Diagnostics -->
                        <div class="form-section">
                            <div class="section-header">
                                <i class="fas fa-stethoscope"></i> Diagnostics
                            </div>
                            <div class="form-row">
                                <div class="form-group" style="width: 100%;">
                                    <label>Fault Categories (Multi-Select)</label>
                                    <div class="checklist-grid">
                                        <label *ngFor="let fault of faultOptions" class="job-checkbox"
                                            [class.checked]="isFaultSelected(fault)"
                                            (click)="toggleFault(fault); $event.preventDefault()">
                                            <input type="checkbox" [checked]="isFaultSelected(fault)"
                                                style="pointer-events: none;">
                                            <span>{{ fault }}</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group" style="flex: 2;">
                                    <label>Customer Remarks / Symptoms</label>
                                    <input type="text" class="form-control" [(ngModel)]="editingJob.customerRemark"
                                        name="custRemark" placeholder="What is the customer experiencing?">
                                </div>
                            </div>

                            <label style="margin-top: 15px; display: block; font-weight: 500;">Physical Condition
                                (Received)</label>
                            <div class="checklist-grid">
                                <label class="job-checkbox" [class.checked]="editingJob.scratches">
                                    <input type="checkbox" [(ngModel)]="editingJob.scratches" name="condScratch">
                                    <span>Scratches</span>
                                </label>
                                <label class="job-checkbox" [class.checked]="editingJob.dents">
                                    <input type="checkbox" [(ngModel)]="editingJob.dents" name="condDent">
                                    <span>Dents</span>
                                </label>
                                <label class="job-checkbox" [class.checked]="editingJob.backGlassBroken">
                                    <input type="checkbox" [(ngModel)]="editingJob.backGlassBroken" name="condBack">
                                    <span>Back Cracked</span>
                                </label>
                                <label class="job-checkbox" [class.checked]="editingJob.bentFrame">
                                    <input type="checkbox" [(ngModel)]="editingJob.bentFrame" name="condBent">
                                    <span>Bent Frame</span>
                                </label>
                            </div>


                        </div>

                        <!-- Financials -->
                        <div class="form-section financial-card">
                            <div class="section-header">
                                <i class="fas fa-file-invoice-dollar"></i> Estimates & Payment
                            </div>
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Estimated Cost (₹)</label>
                                    <input type="number" class="form-control" [(ngModel)]="editingJob.estimatedCost"
                                        (input)="calculatePending()" name="estCost"
                                        style="font-size: 1.1rem; font-weight: 600;">
                                </div>
                                <div class="form-group">
                                    <label>Advance Paid (₹)</label>
                                    <input type="number" class="form-control" [(ngModel)]="editingJob.advancePayment"
                                        (input)="calculatePending()" name="advPay" style="font-size: 1.1rem;">
                                </div>
                                <div class="form-group">
                                    <label>Pending Amount</label>
                                    <div class="pending-amount-display">₹{{ editingJob.pendingAmount }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-lg-icon" (click)="closeModal()">
                Cancel
            </button>
            <button type="button" class="btn btn-info btn-lg-icon" (click)="saveAndPrint()">
                <i class="fas fa-print"></i> Save & Print
            </button>
            <button type="button" class="btn btn-success btn-lg-icon" (click)="saveAndWhatsApp()">
                <i class="fab fa-whatsapp"></i> Save & Share
            </button>
            <button type="button" class="btn btn-primary btn-lg-icon" (click)="saveJob()">
                <i class="fas fa-save"></i> Save Only
            </button>
        </div>
    </div>
</div>

<app-confirm-modal [isVisible]="isConfirmOpen" (confirm)="confirmDelete()"
    (cancel)="isConfirmOpen=false"></app-confirm-modal>

<!-- Print Preview Section -->
<div class="card" id="jobSheetPreview" *ngIf="viewMode === 'preview' && printJobData">
    <div class="card-header no-print">
        <div class="card-title">Job Sheet Preview</div>
        <div class="action-buttons">
            <button type="button" class="btn btn-sm" (click)="backToList()">
                <i class="fas fa-arrow-left"></i> Back
            </button>
            <button type="button" class="btn btn-warning" (click)="printJob(printJobData)">
                <i class="fas fa-print"></i> Print
            </button>
        </div>
    </div>

    <div class="job-sheet-print">
        <!-- Header -->
        <div class="print-header">
            <div class="shop-details">
                <h2>DeepMobile Repairing</h2>
                <p>Shop 27, Nagarseth Chamber</p>
                <p>Gunjan, Vapi-396191</p>
                <p>Phone: +91 7405433726</p>
            </div>
            <div class="job-details">
                <h3>JOB SHEET</h3>
                <p class="ticket-id">{{ printJobData.id }}</p>
                <p>Date: {{ printJobData.date | date:'mediumDate' }}</p>
            </div>
        </div>

        <div class="print-row">
            <div class="print-col">
                <h4>Customer Details</h4>
                <p><strong>Name:</strong> {{ printJobData.customerName }}</p>
                <p><strong>Mobile:</strong> {{ printJobData.customerMobile }}</p>
                <p><strong>Alt Mobile:</strong> {{ printJobData.customerAltMobile || '-' }}</p>
                <p><strong>Address:</strong> {{ printJobData.customerAddress || '-' }}</p>
            </div>
            <div class="print-col">
                <h4>Device Details</h4>
                <p><strong>Device:</strong> {{ printJobData.deviceBrand }} {{ printJobData.deviceModel }}</p>
                <p><strong>IMEI:</strong> {{ printJobData.imei || '-' }}</p>
                <p><strong>Color:</strong> {{ printJobData.color || '-' }}</p>
                <p><strong>Lock:</strong> {{ printJobData.lockType }}
                    <span *ngIf="printJobData.lockCode">({{ printJobData.lockCode }})</span>
                </p>
            </div>
        </div>

        <div class="print-section">
            <h4>Diagnostics & Condition</h4>
            <div class="print-row">
                <div class="print-col">
                    <p><strong>Reported Faults:</strong> {{ printJobData.faultCategory }}</p>
                    <p><strong>Remarks:</strong> {{ printJobData.customerRemark || '-' }}</p>
                </div>
                <div class="print-col">
                    <p><strong>Physical Condition:</strong></p>
                    <ul class="condition-list">
                        <li *ngIf="printJobData.scratches">Scratches</li>
                        <li *ngIf="printJobData.dents">Dents</li>
                        <li *ngIf="printJobData.backGlassBroken">Back Glass Broken</li>
                        <li *ngIf="printJobData.bentFrame">Bent Frame</li>
                        <li
                            *ngIf="!printJobData.scratches && !printJobData.dents && !printJobData.backGlassBroken && !printJobData.bentFrame">
                            Good Condition</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="print-section financial-section">
            <table class="financial-table">
                <tr>
                    <td>Estimated Cost:</td>
                    <td>₹{{ printJobData.estimatedCost }}</td>
                </tr>
                <tr>
                    <td>Advance Paid:</td>
                    <td>₹{{ printJobData.advancePayment }}</td>
                </tr>
                <tr class="total-row">
                    <td>Pending Amount:</td>
                    <td>₹{{ printJobData.pendingAmount }}</td>
                </tr>
            </table>
        </div>

        <div class="print-footer">
            <div class="terms">
                <h5>Terms & Conditions</h5>
                <p>1. We are not responsible for any data loss during repair.</p>
                <p>2. Devices not collected within 30 days may be disposed of.</p>
                <p>3. Liquid damage repairs have no warranty.</p>
                <p>4. Please produce this receipt at the time of delivery.</p>
            </div>
            <div class="signatures">
                <div class="sig-box">
                    <p>Customer Signature</p>
                </div>
                <div class="sig-box">
                    <p>Shop Signature</p>
                </div>
            </div>
            <p class="thank-you">Thank you for choosing DeepMobile!</p>
        </div>
    </div>
</div>